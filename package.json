    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "rollup": "^3.29.5",
    "rollup-plugin-typescript2": "^0.31.0",
    "ts-jest": "^29.3.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.0.0"
