  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kidoweb/react-use-magic-animations.git"
  },
  "bugs": {
    "url": "https://github.com/kidoweb/react-use-magic-animations/issues"
  },
  "homepage": "https://github.com/kidoweb/react-use-magic-animations#readme",
  "peerDependencies": {
